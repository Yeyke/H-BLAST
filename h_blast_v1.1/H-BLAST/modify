#blast!/bin/bash

############# New modify script support blastx ###############
#############   May 16, 2012 Weicai Ye  ######################

cxx_dir=$1
install_dir=$2

#Files related to GPU BLAST

mv $cxx_dir/src/objtools/blast/seqdb_writer/Makefile.in		$cxx_dir/src/objtools/blast/seqdb_writer/Makefile.in.bk

